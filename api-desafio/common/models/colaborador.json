{
  "name": "Colaborador",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Aggregate": true
  },
  "properties": {
    "dataCadastro": {
      "type": "date",
      "required": true
    },
    "dataNascimento": {
      "type": "date",
      "required": true
    },
    "medida": {
      "type": {
        "peso": {
          "type": "number"
        },
        "altura": {
          "type": "number"
        },
        "dataHora": {
          "type": "date"
        },
        "imc": {
          "type": {
            "valor": { "type": "number" },
            "classificacao": { "type": "string" }
          }
        }
      }
    },
    "historicoMedidas": {
      "type": [
        {
          "peso": {
            "type": "number"
          },
          "altura": {
            "type": "number"
          },
          "dataHora": {
            "type": "date"
          },
          "imc": {
            "type": {
              "valor": { "type": "number" },
              "classificacao": { "type": "string" }
            }
          }
        }
      ]
    }
  },
  "validations": [],
  "relations": {
    "Avaliacoes": {
      "type": "hasMany",
      "model": "Avaliacao",
      "foreignKey": "ColaboradorId",
      "options": {
        "nestRemoting": true,
        "disableInclude": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "find"
    }
  ],
  "methods": {}
}
